<Window x:Class="SomeHospitalSoft.LoginAsPacientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SomeHospitalSoft"
        mc:Ignorable="d"
        Title="" Height="200" Width="300" ResizeMode="NoResize">
    <StackPanel Margin="3" Background="Wheat">
        <TextBlock>Login</TextBlock>
        <TextBox x:Name="textBoxLogin" Margin="0 5" Height="22"/>
        <TextBlock>Password</TextBlock>
        <PasswordBox x:Name="passwordBox" Margin="0 5" Height="22"/>
        <Button x:Name="ButtonLogin" Width="150" Margin="0 15" 
                Click="ButtonLogin_Click" Height="22" Background="BurlyWood">Login</Button>
    </StackPanel>
</Window>
